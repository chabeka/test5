   <artifactId>sae-webdemo</artifactId>
   <packaging>war</packaging>
   <name>sae-webdemo</name>
   <version>0.0.1-SNAPSHOT</version>



   <build>


      <plugins>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>hibernate3-maven-plugin</artifactId>
            <version>2.2</version>
            <configuration>
               <components>
                  <component>
                     <name>hbm2hbmxml</name>
                     <outputDirectory>src/main/resources/mapping</outputDirectory>
                  </component>
               </components>
               <componentProperties>
                  <drop>true</drop>
                  <propertyfile>/src/main/config/hibernate.properties</propertyfile>
                  <packagename>fr.urssaf.image.sae.webdemo.modele</packagename>
               </componentProperties>
            </configuration>

            <dependencies>

               <dependency>
                  <groupId>mysql</groupId>
                  <artifactId>mysql-connector-java</artifactId>
                  <version>5.1.10</version>
               </dependency>

            </dependencies>
         </plugin>


      </plugins>


   </build>


