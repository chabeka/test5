<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <artifactId>commons-webservice-custom</artifactId>
      <groupId>fr.urssaf.image.commons</groupId>
      <version>0.0.1-SNAPSHOT</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <groupId>fr.urssaf.image.commons</groupId>
   <artifactId>commons-webservice-exemple-ssl</artifactId>
   <version>0.0.1-SNAPSHOT</version>
   <name>commons-webservice-exemple-ssl</name>

   <properties>
      <server>src/test/resources</server>
      <wsdl.document>/document_literal.wsdl</wsdl.document>
      <wsdl.rpc.literal>/rpc_literal.wsdl</wsdl.rpc.literal>
      <wsdl.rpc.encoded>/rpc_encoded.wsdl</wsdl.rpc.encoded>
   </properties>

   <profiles>
      <profile>
         <id>generateWebService</id>

         <build>
            <plugins>

               <plugin>
                  <groupId>org.apache.cxf</groupId>
                  <artifactId>cxf-codegen-plugin</artifactId>
                  <version>${cxf.version}</version>
                  <executions>
                     <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                           <sourceRoot>${basedir}/src/main/java</sourceRoot>
                           <wsdlOptions>
                              <wsdlOption>
                                 <wsdl>${server}${wsdl.document}</wsdl>
                                 <extraargs>
                                    <extraarg>-verbose</extraarg>
                                 </extraargs>
                                 <packagenames>
                                    <packagename>fr.urssaf.image.commons.webservice.exemple.ssl.document.modele</packagename>
                                 </packagenames>
                              </wsdlOption>
                              <wsdlOption>
                                 <wsdl>${server}${wsdl.rpc.literal}</wsdl>
                                 <extraargs>
                                    <extraarg>-verbose</extraarg>
                                 </extraargs>
                                 <packagenames>
                                    <packagename>fr.urssaf.image.commons.webservice.exemple.ssl.rpc.modele</packagename>
                                 </packagenames>
                              </wsdlOption>
                           </wsdlOptions>
                        </configuration>
                        <goals>
                           <goal>wsdl2java</goal>
                        </goals>
                     </execution>
                  </executions>
               </plugin>

               <plugin>
                  <groupId>org.codehaus.mojo</groupId>
                  <artifactId>axistools-maven-plugin</artifactId>
                  <version>${axis.version}</version>
                  <configuration>
                     <outputDirectory>${basedir}/src/main/java</outputDirectory>
                     <urls>

                     </urls>
                     <packageSpace>fr.urssaf.image.commons.webservice.exemple.ssl.rpc.modele</packageSpace>
                  </configuration>
                  <executions>
                     <execution>
                        <goals>
                           <goal>wsdl2java</goal>
                        </goals>
                     </execution>
                  </executions>
               </plugin>
            </plugins>
         </build>
      </profile>
   </profiles>

   <build>
      <plugins>

         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>2.5</version>
            <configuration>
               <skipTests>true</skipTests>
            </configuration>
         </plugin>

      </plugins>
   </build>

   <dependencies>

      <!-- CXF -->

      <dependency>
         <groupId>org.apache.cxf</groupId>
         <artifactId>cxf-rt-transports-http</artifactId>
         <version>${cxf.version}</version>
      </dependency>

      <dependency>
         <groupId>org.apache.cxf</groupId>
         <artifactId>cxf-rt-frontend-jaxws</artifactId>
         <version>${cxf.version}</version>
      </dependency>

      <!-- AXIS  -->

      <dependency>
         <groupId>org.apache.axis</groupId>
         <artifactId>axis</artifactId>
         <version>${axis.version}</version>
      </dependency>

      <dependency>
         <groupId>commons-logging</groupId>
         <artifactId>commons-logging</artifactId>
         <version>1.1.1</version>
      </dependency>

      <dependency>
         <groupId>wsdl4j</groupId>
         <artifactId>wsdl4j</artifactId>
         <version>1.6.2</version>
      </dependency>

      <dependency>
         <groupId>commons-discovery</groupId>
         <artifactId>commons-discovery</artifactId>
         <version>20040218.194635</version>
      </dependency>

      <dependency>
         <groupId>com.sun.xml.rpc</groupId>
         <artifactId>jaxrpc-impl</artifactId>
         <version>1.1.3_01</version>
      </dependency>

   </dependencies>

</project>