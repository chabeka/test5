<?xml version="1.0"?>

<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
 "http://castor.org/mapping.dtd">

<mapping>
   <description>Description of the mapping de document</description>

   <class name="fr.urssaf.image.commons.xml.castor.modele.Document">

      <map-to xml="document" />

      <field name="id" type="integer">
         <bind-xml name="id" node="attribute" />
      </field>

      <field name="titre" type="string">
         <bind-xml name="title" node="element" />
      </field>

      <field name="date" type="string"
         handler="fr.urssaf.image.commons.xml.castor.fieldhandler.DateHandler">
         <bind-xml name="date" node="element" />
      </field>

      <field name="auteur"
         type="fr.urssaf.image.commons.xml.castor.modele.Auteur">
         <bind-xml name="writer" node="element" />
      </field>

      <field name="etats" type="fr.urssaf.image.commons.xml.castor.modele.Etat"
         collection="set">
         <bind-xml name="etat" node="element" />
      </field>

   </class>

   <include href="Auteur.xml" />

   <include href="Etat.xml" />

</mapping>
