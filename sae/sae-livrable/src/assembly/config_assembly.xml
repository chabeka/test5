<?xml version="1.0" encoding="UTF-8"?>
<assembly
   xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
   
   <id>zip</id>
   
   <formats>
      <format>zip</format>
   </formats>
   
   <includeBaseDirectory>false</includeBaseDirectory>
   
   <fileSets>
      
      
      <!-- Fichiers de configuration -->
      <!-- Modèles pour Hawai -->
      <fileSet>
         <directory>src/config/</directory>
         <outputDirectory />
      </fileSet>
      <!-- Exemples -->
      <fileSet>
         <directory>src/config_exemples/</directory>
         <outputDirectory>config_exemples</outputDirectory>
      </fileSet>
      
      
      <!-- Concernant la PKI utilisée par le SAE -->
      <fileSet>
         <directory>src/pki/</directory>
         <outputDirectory />
      </fileSet>
      
      
      <!-- De la documentation -->
      <fileSet>
         <directory>src/manuels/</directory>
         <outputDirectory>manuels</outputDirectory>
      </fileSet>
      
      
      <!-- Application finale web contenant le service web SaeService -->
      <fileSet>
         <directory>${project.parent.basedir}/sae-webservices/target/</directory>
         <includes>
            <include>sae-webservices-${version}.war</include>
         </includes>
         <outputDirectory />
      </fileSet>
      
      
      <!-- Application finale console de téléchargement des CRL -->
      <fileSet>
         <directory>${project.parent.basedir}/sae-igcmaj/target/</directory>
         <includes>
            <include>sae-igcmaj-${version}-exe.jar</include>
         </includes>
         <outputDirectory />
      </fileSet>
      
      
      <!-- Application finale console de lancement des services -->
      <fileSet>
         <directory>${project.parent.basedir}/sae-services-executable/target/</directory>
         <includes>
            <include>sae-services-executable-${version}.jar</include>
         </includes>
         <outputDirectory />
      </fileSet>
      
      
      <!-- Application finale console des services d'exploitation -->
      <fileSet>
         <directory>${project.parent.basedir}/sae-dfce-admin-exploit/target/</directory>
         <includes>
            <include>sae-dfce-admin-exploit-${version}.jar</include>
         </includes>
         <outputDirectory />
      </fileSet>
      
   </fileSets>
   
</assembly>

