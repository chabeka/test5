<?xml version="1.0" encoding="UTF-8"?>
<configuration>

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
      </encoder>
   </appender>

   <logger name="fr.urssaf.image.commons.cassandra.spring.batch" level="TRACE" />
   <logger name="org.cassandraunit" level="OFF" />
   <logger name="org.apache.cassandra" level="OFF" />
   <logger name="me.prettyprint.cassandra" level="OFF" />
   <logger name="com.springsource" level="INFO" />
   <logger name="org.springframework" level="INFO" />
   <logger name="com.netflix.curator" level="OFF" />
   <logger name="net.sf.ehcache" level="OFF" />   
   
   <root level="TRACE">
      <appender-ref ref="console" />
   </root>
  
</configuration>
